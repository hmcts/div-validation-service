#!groovy

properties([
        [
                $class: 'GithubProjectProperty',
                displayName: 'Divorce Validation Service',
                projectUrlStr: 'https://github.com/hmcts/div-validation-service'
        ],
        pipelineTriggers([
                [$class: 'GitHubPushTrigger']
        ])
])

@Library("Infrastructure@hmctsdemo")

def type = "java"
def product = "div"
def component = "vs"

def channel = '#div-dev'

withPipeline(type , product, component) {
    
    if (env.CHANGE_TITLE && !env.CHANGE_TITLE.startsWith('[PREVIEW]')) {
        enableDockerBuild()
        enableDeployToAKS()
    }

    before('functionalTest:aat') {
        env.ITEST_ENVIRONMENT = "aat"
    }

    before('functionalTest:preview') {
        env.ITEST_ENVIRONMENT = "preview"
    }

    after('checkout') {
        echo '${product}-${component} checked out'
    }

    enableSlackNotifications(channel)
}
